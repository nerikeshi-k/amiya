{
  "name": "amiya",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "nodemon",
    "build": "rimraf -rf ./dist/* && NODE_ENV=production tsc",
    "build:dev": "rimraf -rf ./dist/* && NODE_ENV=development tsc"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "yarn build:dev && node ./dist/index.js"
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "fastify": "^3.7.0",
    "mongodb": "^3.6.2",
    "nanoid": "^3.1.16"
  },
  "devDependencies": {
    "@types/mongodb": "^3.5.32",
    "@types/node": "^14.14.6",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5"
  }
}
